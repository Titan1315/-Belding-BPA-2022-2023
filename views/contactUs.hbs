<script>
  
  
  
  function delay(time) {
  return new Promise(resolve => setTimeout(resolve, time));
}


  var popOut = false;
  var small = false;
  
  
  document.getElementById("popout_close_button").addEventListener("mouseover", function() {
                          
    document.getElementById("pop_close_image").style.cssText = "animation:start-rotate-grow-shrink 1s ease-in-out; animation-fill-mode: forwards;";
});
  document.getElementById("popout_close_button").addEventListener("mouseout", function() {
                          
    document.getElementById("pop_close_image").style.cssText = "animation:end-rotate-grow-shrink 1s ease-in-out; animation-fill-mode: forwards;";
});
  
  
 
  
  document.getElementById("popout-btn").addEventListener("click", function() {
    
      
      
      
      document.getElementById("title_text").style.cssText = "animation:slide-in 1s ease-in-out; animation-fill-mode: forwards;";
      document.getElementById("btn1_container").style.cssText = "animation:fade-out 1s ease; animation-fill-mode: forwards;";
    
    
    if(window.innerWidth < 1000){
      document.getElementById("day1").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1s;";
      document.getElementById("day2").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1s;";
      document.getElementById("day3").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1.5s;";
      document.getElementById("day4").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1.5s;";
      document.getElementById("day5").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 2s;";
      document.getElementById("day6").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 2s;";
      document.getElementById("day7").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 2.5s;";
    }else{
      document.getElementById("day1").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1s;";
      document.getElementById("day2").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1s;";
      document.getElementById("day3").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1s;";
      document.getElementById("day4").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1.5s;";
      document.getElementById("day5").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1.5s;";
      document.getElementById("day6").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 1.5s;";
      document.getElementById("day7").style.cssText = "animation: day1 1s; ease; animation-fill-mode: forwards; animation-delay: 2s;";
      
    }
      document.getElementById("title_text").style.display = "block";
      document.getElementById("btn1_container").style.display = "none";
      popOut = true;
    
  });
  
  document.getElementById("popout_close_button").addEventListener("click", function() {
    
    
    document.getElementById("title_text").style.cssText = "animation: fadeOutDown .5s; ease; animation-fill-mode: forwards;";
    
    delay(1000).then(() => document.getElementById("title_text").style.display = "none" );
    delay(1000).then(() => document.getElementById("btn1_container").style.cssText = "animation:fade-in 1s ease; animation-fill-mode: forwards;" );
    delay(1000).then(() => document.getElementById("btn1_container").style.display = "flex" );
    
    
    
    
    
    
    popOut = false;
    
  });
  

</script>