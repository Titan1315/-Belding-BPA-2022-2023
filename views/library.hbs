<script>

  const dropdowns = document.querySelectorAll('.dropdown');
  dropdowns.forEach(dropdown => { const select =
  dropdown.querySelector('.select'); const caret =
  dropdown.querySelector('.caret'); const menu =
  dropdown.querySelector('.menu'); const options =
  dropdown.querySelectorAll('.menu li'); const selected =
  dropdown.querySelector('.selected'); select.addEventListener('click', () => {
  select.classList.toggle('selected-clicked');
  caret.classList.toggle('caret-rotate'); menu.classList.toggle('menu-open');
  }); options.forEach(option => { option.addEventListener('click', () => {
  selected.innerText = option.innerText;
  select.classList.remove('selected-clicked');
  caret.classList.remove('caret-rotate'); menu.classList.remove('menu-open');
  options.forEach(option => { option.classList.remove('active'); });
  option.classList.add('active'); }); }); });

  
const btn = document.querySelector(".btn");
const popup = document.querySelector(".popup");

if (new URLSearchParams(window.location.search).has("error")) {
  // Show the popup
  popup.style.left = "50px";
  setTimeout(() => {
    popup.style.left = "-300px";
  }, 3000);
}

btn.onclick = () => {
  // Show the popup and disable the button
  popup.style.left = "50px";
  btn.disabled = true;
  setTimeout(() => {
    popup.style.left = "-300px";
    btn.disabled = false;
  }, 2300);
};
  
</script>